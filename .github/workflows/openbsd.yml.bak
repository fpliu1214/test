name: OpenBSD

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:
    runs-on: macos-10.15
    
    steps:
    - uses: actions/checkout@v2

    - uses: leleliu008/github-actions-vagrant@v1
      with:
        mem: 2048
        box: generic/openbsd6
        run: |
          run ls -a .
          run cp -r . ..
          run ls -a ..
          run pkg_info -Q tree
          run pkg_add tree
          run pkg_info -Qd tree
          run tree --help
