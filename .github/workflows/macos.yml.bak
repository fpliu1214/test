name: macOS

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - run: brew update
      - run: brew install bison
      - run: brew --prefix bison
      - run: |
          brew info --json=v2 bison | sed -n '/"keg_only":/p'
      - run: |
          brew info --json=v2 bison | sed -n '/"keg_only:"/p' | sed 's/ //g' | cut -d: -f2 | sed 's/,//'
      - run: |
          ls $(brew --prefix bison)

      - run: cc -dumpmachine
      - run: cc --version

      - run: clang --version
      - run: clang -dumpmachine

      - uses: actions/checkout@v2

        #- run: curl -LO https://raw.githubusercontent.com/leleliu008/ndk-pkg/master/bin/ndk-pkg

      - run: chmod +x ndk-pkg
  
      - run: ./ndk-pkg env

      - run: ./ndk-pkg update

        #- run: cp bitcoin.sh ~/.ndk-pkg/repos.d/offical/formula

        #- run: ./ndk-pkg install pcre --tree

      - run: |
          for item in $(./ndk-pkg ls-available)
          do
            if brew info "$item" > /dev/null 2>&1 ; then
              echo
              echo brew info "$item"
              brew info "$item" 2>/dev/null | head -n 1
              brew info "$item" 2>/dev/null | head -n 1 | grep ': ' || return 1
            fi
          done
      - run: command -v aclocal
      - run: aclocal --version
      - run: aclocal --print-ac-dir
      - run: ls $(aclocal --print-ac-dir)

      - run: command -v automake
      - run: automake --version

      - run: command -v autoconf
      - run: autoconf --version

      - run: command -v libtoolize
      - run: libtoolize --version
