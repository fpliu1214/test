name: AlpineLinux

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:
    runs-on: ubuntu-20.04
    
    strategy:
      fail-fast: false
      matrix:
        tag: [3.21, 3.20, 3.19, 3.18, 3.17, 3.16, 3.15]

    container: alpine:${{ matrix.tag }}

    steps:
      - run: apk add git

      - uses: actions/checkout@v2

      - run: |
          ls -a .
          cp -r . ..
          ls -a ..
