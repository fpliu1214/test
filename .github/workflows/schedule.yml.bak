name: macOS

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]
  schedule:
    - cron:  '0 0 * * *'

jobs:
  test:

    strategy:
      matrix:
        version: [11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - uses: actions/checkout@v2
      - run: brew update

      - run: curl -LO https://raw.githubusercontent.com/leleliu008/zpkg/master/bin/zpkg

      - run: chmod +x zpkg

      - run: ./zpkg env

      - run: ./zpkg update
