        perl) echo 'perl5' ;;
        gsed) echo 'gnu-sed'  ;;
        find) echo 'findutils';;
        diff) echo 'diffutils';;
     objcopy) echo 'binutils' ;;
  7z|7za|7zr) echo 'p7zip'    ;;
    xsltproc) echo 'libxslt'  ;;
      protoc) echo 'protobuf' ;;
